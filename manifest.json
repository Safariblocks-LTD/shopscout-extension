{
  "manifest_version": 3,
  "name": "ShopScout - AI Shopping Agent",
  "version": "1.0.0",
  "description": "Your AI-powered shopping assistant that finds better deals, summarizes reviews, and vets sellers - all while you shop.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "alarms",
    "sidePanel",
    "offscreen"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.ebay.com/*",
    "https://*.ebay.co.uk/*",
    "https://*.walmart.com/*",
    "https://*.temu.com/*",
    "https://*.shopify.com/*",
    "https://*.aliexpress.com/*",
    "https://*.target.com/*",
    "https://*.bestbuy.com/*",
    "https://*.jumia.co.ke/*",
    "https://*.jiji.co.ke/*",
    "https://*.jumia.com.ng/*",
    "https://*.jiji.ng/*",
    "https://*.argos.co.uk/*",
    "https://*.googleapis.com/*",
    "https://*.firebaseapp.com/*",
    "https://*.google.com/*",
    "https://shopscout-api.fly.dev/*",
    "https://shopscout-auth.fly.dev/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*",
        "https://*.ebay.com/*",
        "https://*.ebay.co.uk/*",
        "https://*.walmart.com/*",
        "https://*.temu.com/*",
        "https://*.shopify.com/*",
        "https://*.aliexpress.com/*",
        "https://*.target.com/*",
        "https://*.bestbuy.com/*",
        "https://*.jumia.co.ke/*",
        "https://*.jiji.co.ke/*",
        "https://*.jumia.com.ng/*",
        "https://*.jiji.ng/*",
        "https://*.argos.co.uk/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Open ShopScout"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "auth.html", "auth.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
